<Window x:Class="WpfApp12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button HorizontalAlignment="Left" Content="&lt;" Height="40" Width="80" Click="Button_Click_1"/>
        <DatePicker HorizontalAlignment="Center" Height="40" Width="630" SelectedDateFormat="Long"/>
        <Button HorizontalAlignment="Right" Content="&gt;" Height="40" Width="80" Click="Button_Click"/>

        <WrapPanel Grid.Row="1" x:Name="Calendar"/>
    </Grid>
</Window>
